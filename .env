DEBUG=false
HOST=0.0.0.0
PORT=8000

# Dify LLM配置（必需）
DIFY_APPID=test_app_id
DIFY_TOKEN=test_token
DIFY_URL=https://api.dify.ai/v1/workflows/run
DIFY_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0

# 文件处理配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
TEMP_DIR=temp
ALLOWED_EXTENSIONS=.docx,.pdf

# 处理配置
MAX_CONCURRENT_LLM=5
CHUNK_SIZE=1000
PROCESSING_TIMEOUT=300

# 安全配置
SECRET_KEY=test_secret_key
RATE_LIMIT=60
CORS_ORIGINS=*

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 规则配置
RULES_FILE=rules.yaml
RULES_AUTO_RELOAD=true